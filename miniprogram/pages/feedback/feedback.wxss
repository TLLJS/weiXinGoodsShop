/* pages/feedback/feedback.wxss */
page{
    background-color: #ccc;
}
.main{
    padding: 20rpx;
    
}
.title_top{
    margin-top: 15rpx;
    padding: 10rpx 20rpx;
}
.main text{
    padding: 10rpx 20rpx;
    background-color: #fff;
    text-align: center;
}
.main text:nth-child(2){
    margin: 0 10rpx;
}
.main view{
    padding: 10rpx 0rpx;
    margin-top: 20rpx;
}
.main view text{
    padding: 10rpx 50rpx;
}
.textaresa{
    margin-top: 20rpx;
    background-color: #fff;
    padding: 10rpx;
}
.btn{
    display: flex;
    flex-wrap: wrap;
}
.btn button{
    width: 90rpx;
    height: 90rpx;
    margin: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 20rpx;
    margin-top: 10rpx;
    font-size: 40rpx;
    
}
.form_btn{
    display: flex;
    justify-content: flex-end;
    margin-top: 20rpx;
    padding-right: 10rpx;
}
.form_btn icon{
    vertical-align: middle;
}
.form_btn button{
    width: 40%;
    color: white;
    background-color:var(--themeColor);
    margin: 0;
}
.iamfd{
    margin-left: 20rpx;
    margin-top: 15rpx;
}
