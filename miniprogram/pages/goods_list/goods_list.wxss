/* pages/goods_list/goods_list.wxss */
page{
  /* 底部工具栏固定定位在底部会遮挡住页面中最下面的内容，所以设置一下page的底部的内边距和底部的工具栏一样高 */
  padding-bottom: 90rpx;
}
.res{
  background-color: var(--themeColor);
}
swiper{
  width: 100vw;
  height:70vw;
  text-align: center;
}
.swipers image{
  width: 60%;
}
.goods_price{
  padding: 15rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--themeColor);
}
.goods_name_row{
  display: flex;
  border-top: 5rpx solid #dedede;
  border-bottom: 5rpx solid #dedede;
  padding: 10rpx 0;
}
.goods_name_row .goods_name{
  flex: 5;
  padding-left: 5rpx;
  /* white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis; */
}
.goods_name_row .goods_collect{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 5rpx solid #000;
}
.goods_info_title{
  color: var(--themeColor);
  font-weight: 700;
  padding: 30rpx 0 30rpx 10rpx;
  font-size: 32rpx;
  border-bottom: 5rpx solid #dedede;
}
.bottom_tool{
 display: flex;
 position: fixed;
 left: 0;
 bottom: 0;
 width: 100%;
 height: 90rpx;
 background-color: #fff;
 border-top: 2rpx solid #ccc;
}
.bottom_tool view:nth-child(-n+3){
  font-size: 24rpx;
}
.tool-item{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
}
.tool-item button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.bottom_tool .cart,.bottom_tool .buy{
  flex: 3;
  color: #fff;
}
.cart{
  background-color: orange;
  
}
.buy{
  background-color: red;
}