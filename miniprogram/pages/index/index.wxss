/* pages/index/index.wxss */
view{
  color: var(--themeColor);
}
swiper{
  width: 100%;
  /* 使得swiper的高度和原图保持一致 */
  height: 340rpx;
}
swiper image{
  width: 100%;
}
.index_cate{
  display: flex;
}
.index_cate navigator{
  padding: 20rpx;
  flex: 1;
}
.index_cate image{
  width: 100%;
}
.floors_title{
  padding: 10rpx 0;
}
.floors_title image{
  width: 100%;
}
.floors_detail{
  overflow: hidden;
}
.floors_detail navigator{
  width: 33.33%;
  float: left;
}
.floors_detail navigator image{
  width: 100%;
  height: 100%;
}
.floors_detail navigator:nth-child(n+1) image{
  height: 25.72717207vw;
  border-left: 10rpx solid #fff;
}
.floors_detail navigator:nth-child(2),.floors_detail navigator:nth-child(3){
  border-bottom: 5rpx solid #fff;
}